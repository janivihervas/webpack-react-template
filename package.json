{
  "name": "webpack-react-template",
  "version": "1.0.0",
  "description": "Template project for Webpack and React",
  "author": "Jani Viherv√§s",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/janivihervas/webpack-react-template"
  },
  "bugs": "https://github.com/janivihervas/webpack-react-template/issues",
  "keywords": [
    "webpack",
    "react",
    "react-hot-loader",
    "es6",
    "scss",
    "mocha",
    "chai",
    "istanbul",
    "eslint",
    "stylelint",
    "docker"
  ],
  "scripts": {
    "serve": "webpack-dev-server",
    "test": "mocha",
    "test:coverage": "npm run clean:coverage && istanbul cover --i=app/**/*.js* _mocha",
    "test:check-coverage": "istanbul check-coverage coverage/coverage.json",
    "lint:js": "eslint app test",
    "lint:scss": "stylelint 'app/**/*.scss' --syntax scss",
    "dist": "npm run clean:dist && NODE_ENV=production webpack -p",
    "dist:serve": "http-server dist -a localhost -p 8081 -o",
    "docker": "docker run --rm -e PORT=80 -p 80:80 -d --name webpack-react-template webpack-react-template",
    "docker:build": "docker build -t webpack-react-template .",
    "docker:remove": "docker rm --force webpack-react-template",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage"
  },
  "dependencies": {
    "normalize.css": "^4.2.0",
    "react": "^15.2.0",
    "react-dom": "^15.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.0.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-config-standard-react": "^2.4.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-react": "^5.1.1",
    "eslint-plugin-standard": "^1.3.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.17.0",
    "http-server": "^0.9.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^2.4.5",
    "node-sass": "^3.7.0",
    "postcss-loader": "^0.9.1",
    "react-addons-test-utils": "^15.2.0",
    "react-hot-loader": "^1.3.0",
    "rimraf": "^2.5.3",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "stylelint": "^6.8.0",
    "stylelint-config-suitcss": "^7.0.0",
    "stylelint-webpack-plugin": "^0.2.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-md5-hash": "~0.0.5"
  }
}
